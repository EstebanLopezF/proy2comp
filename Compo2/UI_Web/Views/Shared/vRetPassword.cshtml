@using Web_UI.Models.Helpers;
<script src="~/Scripts/Views/vLogin.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main id="main" class="form-container container">
    <section class="my-5 mx-4">
        <section class="section-title">
            <p>Recuperar Contraseña</p>
        </section>

        <section class="generic-form">
            <form id="frmRetPass" class="d-flex flex-column align-items-center">
                <div class="col-md-4">
                    @Html.CTRL_Input(ID: "txtID", Type: "number", Label: "Número de Identificación", ColumnDataName: "ID_Owner")
                </div>
            </form>

            <section class="d-flex justify-content-around py-4 button-group">
                @Html.CTRL_Button(ViewName: "vLogin", ID: "BTN_RetPass", Label: "Recuperar Contraseña", OnClickFunction: "RetPass", ButtonType: "btn-main-action")
                @Html.ActionLink("Volver", "Index", "/", new { @class = "btn-second-action mx-4" })
            </section>
        </section>
    </section>
</main>
